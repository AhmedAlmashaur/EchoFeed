<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EchoFeed - Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --bs-body-bg: #fff;
        --bs-body-color: #000;
      }
      .dark-mode {
        --bs-body-bg: #212529;
        --bs-body-color: #fff;
      }
    </style>
  </head>
  <body class="bg-body">
    <%- include('../partials/nav', { user: user }) %>

    <main class="container mt-5">
      <h1 class="text-center mb-4">Latest Posts</h1>
      <div class="row" id="postsContainer">
        <!-- Posts will be dynamically loaded here -->
      </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
      // Dark Mode Toggle
      const themeToggle = document.getElementById("themeToggle");
      const body = document.body;

      themeToggle.addEventListener("change", () => {
        if (themeToggle.checked) {
          body.classList.add("dark-mode");
        } else {
          body.classList.remove("dark-mode");
        }
      });

      // Fetch posts from API and render them
      async function loadPosts() {
        try {
          const response = await fetch("/post/posts"); // API endpoint for fetching posts
          const posts = await response.json();

          const postsContainer = document.getElementById("postsContainer");
          posts.forEach((post) => {
            const postCard = document.createElement("div");
            postCard.className = "col-md-4 mb-4";
            postCard.innerHTML = `
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title">${post.title}</h5>
                <p class="card-text">${post.content.substring(0, 100)}...</p>
              </div>
              <div class="card-footer text-muted">
                Posted on ${new Date(post.createdAt).toLocaleDateString()}
              </div>
            </div>
          `;
            postsContainer.appendChild(postCard);
          });
        } catch (error) {
          console.error("Error fetching posts:", error);
        }
      }

      // Load posts on page load
      document.addEventListener("DOMContentLoaded", loadPosts);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
